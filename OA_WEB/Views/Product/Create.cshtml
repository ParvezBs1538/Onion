@model OA_Data.Product
@{
    ViewData["Title"] = "Create";
}

<h1>Create Product</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Product Name</label>
        <input asp-for="Pro_Name" class="form-control" />
        <span asp-validation-for="Pro_Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Product Description</label>
        <textarea asp-for="Pro_Description" class="form-control"></textarea>
        <span asp-validation-for="Pro_Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Product Quantity</label>
        <input asp-for="Pro_Qty" class="form-control" />
        <span asp-validation-for="Pro_Qty" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Product Price</label>
        <input asp-for="Pro_Price" class="form-control" />
        <span asp-validation-for="Pro_Price" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>
